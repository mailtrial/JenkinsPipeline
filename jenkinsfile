    agent any

    stages {
        stage('plan') {
            steps {
                echo 'plan is done'
            }
        }
        stage('code') {
            steps {
                echo 'code is done'
            }
        }
        stage('test') {
            steps {
                echo 'Testing the project'
            }
        }
        stage('release') {
            steps {
                echo 'releaseing the new version..'
            }
        }
        stage('deploy') {
            steps {
                echo 'deploy is done..'
            }
        }
         stage('monitor') {
            steps {
                echo 'monitoring..'
            }
        }
    }
}
